<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="slideshow.css" />
    <script language="javascript" src="slideshow.js"></script>
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#29487d">
        <div class="container" style="background-color:none;">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @* @Html.ActionLink("Valence", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                @*<img src="#" alt="Home/Dashboard" />*@
                <a href="~/Home/DashBoard/">
                    <img class="logo" 
                         src="~/Content/Images/logo.jpg" alt="Home"   />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" style="background-color:#e9ebee;">
        @RenderBody()
        <hr />
        <footer class="footercss">

          <div><a href="#"><img class="logo" src="~/Content/Images/evolent-valence-7x4.jpg" alt="About" /></a></div>  
            <p>&copy; @DateTime.Now.Year -ValenceCare<b>(Care your heart and share our love)</b></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
